<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/basketMealInfoCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginEnd="25dp"
    android:layout_marginStart="25dp"
    android:background="@drawable/picked_meal_info_backgroud_shape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/basketMealTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:lines="2"
            android:maxLines="2"
            android:padding="10dp"
            android:text="Food name "
            android:textColor="@color/backIconColor"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/cancelMealButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_remove_button"/>
    </LinearLayout>

    <TextView
        android:id="@+id/basketMealDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="20dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:padding="10dp"
        android:text="Description about this food "
        android:textColor="@color/searchIconColor"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/basketMealPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Cena: "
        android:textColor="@color/signup_textfield_hint"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/basketMealKolicinaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Kolicina: "
        android:textColor="@color/signup_textfield_hint"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/basketMealRestaurantText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="Restaurant "
        android:textColor="@color/searchIconColor"
        android:textSize="14sp"
        />
</LinearLayout>