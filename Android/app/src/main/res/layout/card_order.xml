<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ordersCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginEnd="25dp"
    android:layout_marginStart="25dp"
    android:background="@drawable/picked_meal_info_backgroud_shape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ordersNarocenoPriText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="Naročeno pri"
            android:textColor="@color/backIconColor"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/orderRestaurantNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:lines="2"
            android:maxLines="1"
            android:text="Ime restavracije"
            android:textColor="@color/searchIconColor"
            android:textSize="18sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ordersDatumNarocilaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="Datum narocila "
            android:textColor="@color/backIconColor"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ordersDatumNarocilaField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="01/02/2018 16:05"
            android:textColor="@color/searchIconColor"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ordersCasPrevzemaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingTop="0dp"
            android:text="Čas prevzema"
            android:textColor="@color/backIconColor"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ordersCasPrevzemaField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="01/02/2018 17:10"
            android:textColor="@color/searchIconColor"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ordersPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="Cena"
            android:textColor="@color/backIconColor"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ordersPriceField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:paddingStart="10dp"
            android:text="24,0 € "
            android:textColor="@color/searchIconColor"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ordersStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="Status naročila"
            android:textColor="@color/backIconColor"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ordersStatusField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:text="STATUS"
            android:textColor="@color/searchIconColor"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>